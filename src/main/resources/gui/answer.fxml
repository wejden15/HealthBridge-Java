<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_answer"
      spacing="20"
      stylesheets="@../styles/quiz.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Navigation Panel -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="navigation-panel">
        <Button text="Quizzes" onAction="#handleQuizNavigation"/>
        <Button text="Questions" onAction="#handleQuestionNavigation"/>
        <Button text="Answers" onAction="#handleAnswerNavigation"/>
        <Button text="Take Quiz" onAction="#handleTakeQuizNavigation"/>
    </HBox>

    <!-- Search Controls -->
    <HBox spacing="10" alignment="CENTER" styleClass="search-controls">
        <TextField fx:id="searchField" promptText="Search answers..." prefWidth="300"/>
        <ComboBox fx:id="searchTypeComboBox" prefWidth="150"/>
    </HBox>

    <!-- Answer Table -->
    <TableView fx:id="answerTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="textColumn" text="Answer Text" prefWidth="400"/>
            <TableColumn fx:id="questionColumn" text="Question" prefWidth="200"/>
            <TableColumn fx:id="correctColumn" text="Correct" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- Add Answer Button -->
    <Button fx:id="createAnswerButton" text="Add Answer" onAction="#handleCreateAnswer" styleClass="action-button-edit"/>
</VBox> 