<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_quiz"
      spacing="20"
      stylesheets="@../styles/quiz.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Navigation Panel -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="navigation-panel">
        <Button text="Quizzes" onAction="#handleQuizNavigation"/>
        <Button text="Questions" onAction="#handleQuestionNavigation"/>
        <Button text="Answers" onAction="#handleAnswerNavigation"/>
        <Button text="Take Quiz" onAction="#handleTakeQuizNavigation"/>
        <Button text="Calendar" onAction="#handleCalendarNavigation"/>
    </HBox>

    <!-- Search Controls -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-controls">
        <TextField fx:id="searchField" promptText="Search..." prefWidth="200"/>
        <ComboBox fx:id="searchTypeComboBox" prefWidth="150"/>
    </HBox>

    <!-- Quiz Table -->
    <TableView fx:id="quizTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Add Quiz Button -->
    <Button text="Add Quiz" onAction="#handleAddQuiz" styleClass="action-button-add"/>
</VBox> 