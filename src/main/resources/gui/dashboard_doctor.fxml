<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.DoctorDashboardController">
    <top>
        <HBox style="-fx-background-color: #2a9d8f; -fx-padding: 15;" alignment="CENTER_LEFT">
            <ImageView fx:id="doctorImageView" fitHeight="50" fitWidth="50" preserveRatio="true">

            </ImageView>
            <VBox spacing="5" style="-fx-padding: 0 15;">
                <Label fx:id="doctorNameLabel" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
                <Label fx:id="doctorSpecialtyLabel" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                <!-- Added username display -->
                <Label fx:id="usernameLabel" style="-fx-text-fill: white; -fx-font-size: 12;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e76f51; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label text="Session Test" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
                <Label text="Current Session Information:" style="-fx-font-weight: bold;"/>
                <Label fx:id="sessionInfoLabel"/>
                <Button text="Test Session Access" onAction="#testSessionAccess"/>
            </VBox>

            <Label text="My Patients" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <TableView fx:id="patientsTable">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="200"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                    <TableColumn fx:id="lastVisitColumn" text="Last Visit" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #f8f9fa; -fx-padding: 10;" alignment="CENTER">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #6c757d;"/>
        </HBox>
    </bottom>
</BorderPane>