<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.AdminDashboardController"
      spacing="20"
      styleClass="nav-form white-bg shadow"
      style="-fx-padding: 30; -fx-background-radius: 15;">

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Admin Dashboard" styleClass="label-item" style="-fx-font-size: 28px;"/>
        <Button text="Logout" onAction="#handleLogout" styleClass="btn shadow"/>
    </HBox>

    <TableView fx:id="doctorTableView" styleClass="table-view shadow">
        <columns>
            <TableColumn text="Email" prefWidth="250" styleClass="column-header">
                <cellValueFactory>
                    <PropertyValueFactory property="username"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <GridPane hgap="15" vgap="15" styleClass="white-bg" style="-fx-padding: 20; -fx-background-radius: 15;">
        <Label text="Specialty:" styleClass="label-ajout" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="specialtyField" styleClass="textfield" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250"/>

        <Label text="Profile Picture:" styleClass="label-ajout" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Choose Image" onAction="#handleChooseImage" styleClass="import-btn shadow"/>
                <ImageView fx:id="imagePreview" fitWidth="100" fitHeight="100" styleClass="fruit-item shadow"/>
            </HBox>
            <Label text="Supported formats: PNG, JPG" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
        </VBox>

        <Button text="Approve Doctor"
                onAction="#handleApproveDoctor"
                styleClass="btn-add-panier shadow"
                GridPane.columnIndex="1" GridPane.rowIndex="2"
                style="-fx-font-size: 16px; -fx-padding: 8 25;"/>
    </GridPane>
</VBox>