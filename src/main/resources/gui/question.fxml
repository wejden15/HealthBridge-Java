<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_question"
      spacing="20"
      stylesheets="@../styles/quiz.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Navigation Panel -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="navigation-panel">
        <Button text="Quizzes" onAction="#handleQuizNavigation"/>
        <Button text="Questions" onAction="#handleQuestionNavigation"/>
        <Button text="Answers" onAction="#handleAnswerNavigation"/>
        <Button text="Take Quiz" onAction="#handleTakeQuizNavigation"/>
    </HBox>

    <!-- Search Section -->
    <HBox spacing="10" alignment="CENTER" styleClass="search-controls">
        <TextField fx:id="searchField" promptText="Search questions..." prefWidth="300"/>
        <ComboBox fx:id="searchTypeComboBox" prefWidth="150"/>
    </HBox>

    <!-- Question Table -->
    <TableView fx:id="questionTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="textColumn" text="Question" prefWidth="300"/>
            <TableColumn fx:id="quizColumn" text="Quiz" prefWidth="150"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Add Question Button -->
    <Button fx:id="createQuestionButton" text="Add Question" onAction="#handleCreateQuestion" styleClass="action-button-edit"/>
</VBox> 