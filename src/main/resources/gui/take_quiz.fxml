<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_take_quiz"
      spacing="20"
      stylesheets="@../styles/quiz.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Navigation Panel -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="navigation-panel">
        <Button text="Quizzes" onAction="#handleQuizNavigation"/>
        <Button text="Questions" onAction="#handleQuestionNavigation"/>
        <Button text="Answers" onAction="#handleAnswerNavigation"/>
        <Button text="Take Quiz" onAction="#handleTakeQuizNavigation"/>
        <Button text="Export PDF" onAction="#handleExportPdf" styleClass="action-button-edit"/>
    </HBox>

    <!-- Quiz Table -->
    <TableView fx:id="quizTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="nameColumn" text="Quiz Name" prefWidth="200"/>
            <TableColumn fx:id="typeColumn" text="Quiz Type" prefWidth="150"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Quiz Taking Interface -->
    <VBox fx:id="quizTakingContainer" styleClass="quiz-container" visible="false">
        <Label fx:id="questionText" styleClass="question-text" wrapText="true"/>
        <VBox fx:id="answerOptions" spacing="10">
            <!-- Answer options will be added dynamically -->
        </VBox>
        <ProgressIndicator fx:id="progressIndicator" styleClass="progress-indicator"/>
        <Label fx:id="scoreDisplay" styleClass="score-display" visible="false"/>
    </VBox>
</VBox> 