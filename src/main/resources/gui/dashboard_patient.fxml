<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.DashboardController"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 40;">

    <Label text="Patient Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Button text="Book Appointment" style="-fx-min-width: 200px;"/>
    <Button text="View Medical History" style="-fx-min-width: 200px;"/>
    <Button text="Logout" style="-fx-min-width: 200px;" onAction="#handleLogout"/>

</VBox>

