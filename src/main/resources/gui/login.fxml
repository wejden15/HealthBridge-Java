<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.LoginController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: #f4f4f4; -fx-padding: 40;">

    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <Button text="Login"
            onAction="#handleLogin"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <Hyperlink text="Don't have an account? Sign Up"
               onAction="#switchToRegister" />
</VBox>

