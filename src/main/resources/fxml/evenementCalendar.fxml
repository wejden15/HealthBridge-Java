<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.CalendrierController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #f0f4f8;"
            stylesheets="@../css/style.css">

    <!-- Retour Accueil -->
    <Button layoutX="20.0" layoutY="20.0"
            text="🏠 Retour Accueil"
            onAction="#retourAccueil"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

    <!-- DatePicker -->
    <DatePicker fx:id="calendar"
                layoutX="150.0" layoutY="80.0"
                prefWidth="300.0" />

    <!-- ListView pour les événements du jour -->
    <ListView fx:id="eventListView"
              layoutX="100.0" layoutY="150.0"
              prefHeight="300.0" prefWidth="400.0" />
</AnchorPane>
