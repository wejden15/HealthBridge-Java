<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      stylesheets="@../css/style.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controller.DonationController"
      alignment="CENTER" spacing="15" style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="💝 Faire un Don pour cet Événement" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="donorNameField" promptText="Votre nom" />
    <TextField fx:id="amountField" promptText="Montant (TND)" />
    <TextArea fx:id="commentField" promptText="Message ou commentaire..." prefHeight="80" />

    <Button text="Faire un don" onAction="#submitDonation" />
</VBox>
