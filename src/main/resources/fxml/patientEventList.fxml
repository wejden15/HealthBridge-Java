<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controller.PatientEventController"
      stylesheets="@../css/style.css"
      alignment="CENTER" spacing="20" styleClass="content">

    <TextField fx:id="searchField" promptText="🔎 Rechercher un événement..."
               onKeyReleased="#filterEvents"
               styleClass="text-field"
               style="-fx-pref-width: 400px;"/>

    <ListView fx:id="eventListView" prefWidth="400" prefHeight="300" styleClass="list-view"/>
    <TextField fx:id="emailField" promptText="Entrer votre adresse email" styleClass="text-field" />

    <Button text="📧 Envoyer QR par Email" onAction="#sendQrByEmail" styleClass="button"/>

    <ImageView fx:id="qrImageView" fitWidth="300" fitHeight="300" preserveRatio="true" styleClass="image-view"/>

    <Button fx:id="chooseButton" text="✅ Choisir cet événement" onAction="#chooseEvent"
            styleClass="button" visible="false"/>

    <Button fx:id="downloadButton" text="📥 Télécharger QR Code" onAction="#downloadQRCode"
            styleClass="button" visible="false"/>
    <Button fx:id="donateButton" text="💝 Faire un don"
            onAction="#openDonationForm"
            visible="false" styleClass="button"/>

</VBox>

