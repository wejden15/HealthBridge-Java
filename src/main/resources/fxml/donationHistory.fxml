<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controller.DonationHistoryController"
      spacing="20" alignment="CENTER" styleClass="content">

    <!-- Title -->
    <Label text="Historique des Donations par Donateur" styleClass="header-title"/>

    <!-- User Selection Dropdown -->
    <ComboBox fx:id="userComboBox" promptText="Sélectionner un donateur"
              onAction="#loadDonationsForUser" prefWidth="300"/>

    <!-- Donations Table -->
    <TableView fx:id="donationTable" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="eventColumn" text="Événement"/>
            <TableColumn fx:id="amountColumn" text="Montant"/>
            <TableColumn fx:id="commentColumn" text="Commentaire"/>
            <TableColumn fx:id="dateColumn" text="Date"/>
        </columns>
    </TableView>
</VBox>
