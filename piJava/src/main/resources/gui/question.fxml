<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_question"
      spacing="20"
      styleClass="white-bg shadow"
      stylesheets="@hello-view.css"
      alignment="TOP_CENTER"
      prefWidth="880" prefHeight="600">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Navigation Panel -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Quizzes" onAction="#handleQuizNavigation" styleClass="btn"/>
        <Button text="Questions" onAction="#handleQuestionNavigation" styleClass="btn"/>
        <Button text="Answers" onAction="#handleAnswerNavigation" styleClass="btn"/>
        <Button text="Take Quiz" onAction="#handleTakeQuizNavigation" styleClass="btn"/>
    </HBox>

    <!-- Question Table -->
    <TableView fx:id="questionTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="textColumn" text="Question Text" prefWidth="400"/>
            <TableColumn fx:id="quizColumn" text="Quiz" prefWidth="200"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- Add Question Button -->
    <Button fx:id="createQuestionButton" text="Add Question" onAction="#handleCreateQuestion" styleClass="btn-add-panier"/>
</VBox>
