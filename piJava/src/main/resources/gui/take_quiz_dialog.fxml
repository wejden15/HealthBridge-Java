<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_take_quiz_dialog"
      spacing="20"
      alignment="TOP_CENTER"
      prefWidth="880" prefHeight="600"
      styleClass="white-bg shadow"
      stylesheets="@hello-view.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Quiz Info -->
    <VBox spacing="10" styleClass="info-box">
        <Label fx:id="quizNameLabel" styleClass="quiz-title"/>
        <Label fx:id="quizTypeLabel" styleClass="quiz-subtitle"/>
    </VBox>

    <!-- Question Area -->
    <VBox spacing="15" VBox.vgrow="ALWAYS" styleClass="question-box">
        <Label fx:id="questionNumberLabel" styleClass="question-number"/>
        <Label fx:id="questionTextLabel" styleClass="question-text"/>

        <!-- Answers -->
        <VBox fx:id="answersContainer" spacing="10"/>
    </VBox>

    <!-- Navigation Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="prevButton" text="Previous" onAction="#handlePreviousQuestion" styleClass="btn"/>
        <Button fx:id="nextButton" text="Next" onAction="#handleNextQuestion" styleClass="btn"/>
        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit" styleClass="btn-add-panier"/>
    </HBox>

    <!-- Progress Indicator -->
    <ProgressBar fx:id="progressBar" prefWidth="Infinity" styleClass="progress-purple"/>
    <Label fx:id="progressLabel" alignment="CENTER" styleClass="progress-label"/>
</VBox>
