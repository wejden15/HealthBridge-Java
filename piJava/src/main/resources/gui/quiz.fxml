<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.cont_quiz"
      spacing="20"
      stylesheets="@styles.css"
      styleClass="white-bg shadow">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Navigation Panel -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Quizzes" onAction="#handleQuizNavigation" styleClass="btn"/>
        <Button text="Questions" onAction="#handleQuestionNavigation" styleClass="btn"/>
        <Button text="Answers" onAction="#handleAnswerNavigation" styleClass="btn"/>
        <Button text="Take Quiz" onAction="#handleTakeQuizNavigation" styleClass="btn"/>
    </HBox>

    <!-- Quiz Table -->
    <TableView fx:id="quizTable" VBox.vgrow="ALWAYS" styleClass="table-view shadow">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Add Quiz Button -->
    <Button text="Add Quiz" onAction="#handleAddQuiz" styleClass="btn-add-panier"/>
</VBox>
